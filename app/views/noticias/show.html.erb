<%= render(:partial => @noticia)%>
<hr />
<h2>Comentarios</h2>
<%= render :partial =>@noticia.comentarios%>
<hr />
<h2>Nuevo Comentario</h2>
<% form_for [@noticia, Comentario.new] do |f|%>
<p>
<%= f.label :autor%><br />
<%= f.text_field :autor%><br />
</p>
<p>
<%= f.label :email%><br />
<%= f.text_field :email%><br />
</p>
<p>
<%= f.label :texto%><br />
<%= f.text_area :texto%><br />
</p>
<p><%= f.submit "Enviar"%></p>
<% end %>
