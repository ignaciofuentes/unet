<h1>Login</h1>
 <div><%=link_to  image_tag("unet-blanco.jpg", :size => "300x100", :class=> "login"), root_path%></div>
<% form_for @user_session do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br />
  <%= f.submit "Login" %>
	
<% end %>